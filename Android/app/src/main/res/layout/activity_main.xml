<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff0132"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/text_edit_password_aggain"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="password again"
        android:inputType="textPassword"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/button_sign_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_edit_password" />

    <EditText
        android:id="@+id/text_edit_login"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="login"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/text_edit_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_edit_email" />

    <EditText
        android:id="@+id/text_edit_email"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="31dp"
        android:ems="10"
        android:hint="e-mail"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/text_edit_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_reg_details" />

    <EditText
        android:id="@+id/text_edit_password"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/text_edit_password_aggain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_edit_login" />

    <TextView
        android:id="@+id/label_sign_pls_login"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="180dp"
        android:accessibilityLiveRegion="none"
        android:alpha="0.7"
        android:clickable="false"
        android:fontFamily="sans-serif-medium"
        android:shadowColor="#797980"
        android:text="if you allrady have account please login"
        android:textAlignment="textStart"
        android:textColor="#eeeeee"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/button_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_sign_up" />


    <TextView
        android:id="@+id/label_registration"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="239dp"
        android:accessibilityLiveRegion="none"
        android:clickable="false"
        android:fontFamily="sans-serif-medium"
        android:shadowColor="#797980"
        android:text="Registration"
        android:textAlignment="textStart"
        android:textColor="#eeeeee"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/label_reg_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label_reg_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="184dp"
        android:layout_marginBottom="67dp"
        android:accessibilityLiveRegion="none"
        android:alpha="0.7"
        android:clickable="false"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="12sp"
        android:shadowColor="#797980"
        android:text="Enter registration details"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#EAC0C0"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/text_edit_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_registration" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#eeeeee"
        android:fontFamily="sans-serif-medium"
        android:text="Login"
        android:textColor="#FF0000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_sign_pls_login" />

    <Button
        android:id="@+id/button_sign_up"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:backgroundTint="#eeeeee"
        android:fontFamily="sans-serif-medium"
        android:text="Sign UP"
        android:textColor="#FF0000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/label_sign_pls_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_edit_password_aggain" />

</androidx.constraintlayout.widget.ConstraintLayout>